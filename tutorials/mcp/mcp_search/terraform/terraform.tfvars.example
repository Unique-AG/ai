# ============================================================================
# Required Variables
# ============================================================================

# Azure Subscription (optional - uses default from Azure CLI if not set)
# subscription_id = "12345678-1234-1234-1234-123456789012"

# Azure Resource Group and Location
resource_group_name = "rg-mcp-search"
location            = "westeurope"

# Base name for resources (used in naming conventions)
# - base_name: used for resources that allow hyphens (e.g., kv-search-mcp-xxx)
# - base_name_clean: same but without hyphens for Storage/ACR (e.g., stsearchmcpxxx)
base_name       = "search-mcp"
base_name_clean = "searchmcp"

# Domain Configuration
# NOTE: For HTTPS with a custom domain, you must:
#   1. Own the domain and have DNS control
#   2. After deployment, create a CNAME record pointing to the ACI FQDN
#      (run `terraform output aci_fqdn` to get it)
#
# For testing without a custom domain, use the ACI FQDN directly:
#   domain_name = "aci-search-mcp-SUFFIX.REGION.azurecontainer.io"
#   (The actual FQDN is only known after first deployment)
#
# Example with custom domain you own:
domain_name = "mcp-search.yourdomain.com"
caddy_email = "admin@yourdomain.com"

# ============================================================================
# Application Secrets
# ============================================================================

# Unique Settings
unique_app_key             = "your-unique-app-key"
unique_app_id              = "your-unique-app-id"
unique_api_base_url        = "https://api.unique.ch"
unique_auth_company_id     = "your-company-id"
unique_auth_user_id        = "your-user-id"
unique_app_endpoint        = "https://your-app-endpoint"
unique_app_endpoint_secret = "your-endpoint-secret"

# Zitadel Settings
zitadel_base_url      = "https://your-zitadel-instance.zitadel.cloud"
zitadel_client_id     = "your-zitadel-client-id"
zitadel_client_secret = "your-zitadel-client-secret"

# ============================================================================
# Optional Variables (uncomment to override defaults)
# ============================================================================

# app_container_cpu    = 1
# app_container_memory = 1.5
# caddy_container_cpu  = 0.5
# caddy_container_memory = 0.5
# app_image_tag        = "latest"

